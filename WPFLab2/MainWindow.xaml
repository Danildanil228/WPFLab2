<Window x:Class="NumberConversionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Number Conversion App" Height="350" Width="500">
    <Grid>
        <Label Content="Введите число:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,14,0,0" Width="150"/>

        <Button Content="Рассчитать" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="298,14,0,0" Click="CalculateButton_Click" Height="275" Width="162"/>

        <Label Content="Десятичная система:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,106,0,0"/>
        <TextBox x:Name="decimalResultTextBox" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,110,0,0" Width="150"/>

        <Label Content="Двоичная система:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,179,0,0"/>
        <TextBox x:Name="binaryResultTextBox" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,183,0,0" Width="150"/>
    </Grid>
</Window>
